<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gover"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

    </View>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#77000000"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


    </View>

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_nopic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dynoregular"
                android:text="Erzaldi Rosman"
                android:textColor="#fff"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gubernur"
                android:textColor="#fff" />

        </LinearLayout>


    </LinearLayout>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_margin="24dp"
            android:background="@drawable/bg_layout_white"

            android:padding="24dp">

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="RPJMD" />

                <TextView android:text="1" />
            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Renstra" />

                <TextView android:text="188" />
            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Program" />

                <TextView android:text="Meningkatnya kesempatan pendidikan\n bagi masyarakat" />

            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Kegiatan" />

                <TextView android:text="Pemberian Beasiswa Siswa SMK" />


            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Pagu" />

                <TextView android:text="1400000000" />


            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Target" />

                <TextView android:text="87%" />
            </TableRow>

            <TableRow android:layout_marginTop="4dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:text="Capaian" />

                <TextView android:text="97%" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>