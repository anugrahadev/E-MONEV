<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/bg_layout_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_menu">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:padding="24dp">
                    <TableRow android:background="#ECECEC" android:layout_marginBottom="8dp">

                        <TextView
                            android:width="70dp"
                            android:paddingTop="4dp"
                            android:text="ID"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/coba"
                            android:height="40dp"
                            android:text="RPJMD, Renstra, \nProgram, Kegiatan"
                            android:textSize="12dp" />

                        <TextView
                            android:paddingLeft="14dp"
                            android:text="Capaian\n/Target"
                            android:textSize="12dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="8dp">

                        <TextView
                            android:width="70dp"
                            android:gravity="center"
                            android:text="26"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:width="160dp"
                            android:text="[Sasaran RPJMD] Meningkatnya kesempatan pendidikan bagi masyarakat"
                            android:textSize="12dp" />

                        <TextView
                            android:paddingLeft="14dp"
                            android:text="90% / 88 %"
                            android:textSize="12dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="8dp">

                        <TextView
                            android:width="70dp"
                            android:gravity="center"
                            android:text="26 - 188"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:width="160dp"
                            android:text="[Sasaran Renstra] Peningkatan Relevansi pendidikan bidang SMK bidang pertanian, perkebunan dan peternakan"
                            android:textSize="12dp" />

                        <TextView
                            android:paddingLeft="14dp"
                            android:text="80% / 83 %"
                            android:textSize="12dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="8dp">

                        <TextView
                            android:width="70dp"
                            android:gravity="center"
                            android:text="26 - 188 - 614"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:width="180dp"
                            android:text="[Renja Program] Program peningkatan dan Pengembangan pelayanan pendidikan kejuruan"
                            android:textSize="12dp" />

                        <TextView
                            android:paddingLeft="14dp"
                            android:text="95% / 83 %"
                            android:textSize="12dp" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="8dp">

                        <TextView
                            android:width="70dp"
                            android:gravity="center"
                            android:text="26 - 188 - 614 - 4262"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:width="160dp"
                            android:text="[Sasaran Renstra] Pemberian beasiswa siswa SMK"
                            android:textSize="12dp" />

                        <TextView
                            android:paddingLeft="14dp"
                            android:text="90% / 88 %"
                            android:textSize="12dp" />
                    </TableRow>
                </TableLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layout_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view">

                <LinearLayout
                    android:id="@+id/pkeuangan"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_layout_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/keuangan" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pfisik"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/bg_layout_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/fisik" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gover"
                app:layout_constraintTop_toTopOf="parent"></View>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#77000000"
                app:layout_constraintTop_toTopOf="parent"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:src="@drawable/icon_nopic" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ResultNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dynoregular"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/title_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dynobold"
                        android:text="Gubernur"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>