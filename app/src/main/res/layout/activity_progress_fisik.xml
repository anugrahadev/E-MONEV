<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressFisikAct">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="#fff">

            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun"
                android:textSize="18dp"
                />
                <Spinner
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6"
                    android:id="@+id/listtahun"
                    android:entries="@array/tahun"
                    android:padding="15dp">

                </Spinner>
                <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKDP"
                android:textSize="18dp"
                />
                <Spinner
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6"
                    android:id="@+id/listskdp"
                    android:entries="@array/skdp"
                    android:padding="15dp">

                </Spinner>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:orientation="vertical">
                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <TableLayout
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow android:background="#E65E34"
                            android:padding="8dp">
                            <TextView
                                android:text=""
                                />
                            <TextView
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_marginLeft="20dp"
                                android:text="Jan"/>
                            <TextView
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="Feb"/>
                            <TextView
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="Mar"/>
                        </TableRow>
                        <TableRow android:padding="8dp"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="135dp"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:padding="8dp"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/bg_btn_orange_darken"
                                android:text="Target"

                                />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="20dp"
                                android:text="4.61%"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="9.64%"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="15.89%"/>
                        </TableRow>
                        <TableRow android:padding="8dp">
                            <TextView
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="135dp"
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:padding="8dp"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/bg_btn_blue_primary"
                                android:text="Realisasi"

                                />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="20dp"
                                android:text="2.18%"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="5.39%"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginLeft="28dp"
                                android:text="10.15%"/>
                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>

                <Button
                    android:paddingLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_edit"
                    android:text="Tulis Komentar"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@drawable/bg_btn_orange_primary"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>